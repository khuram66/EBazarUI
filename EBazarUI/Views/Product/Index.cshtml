@model IEnumerable<EBazarUI.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_VendorLayout.cshtml";
}

<!-- Breadcrumbs-->
<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="@Url.Action("index","Admin")">Home</a>
    </li>
    <li class="breadcrumb-item active">Products</li>
</ol>
<!-- DataTables Example -->
<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        Products
        <a class="btn btn-primary fa fa-plus fa-pull-right" href="@Url.Action("Add","Product")">Add New</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Product_Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Producct_Short_Description)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.Product_Quantity)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Product_Feature_Image)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Category.Category_Name)
                        </th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Product_Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Producct_Short_Description)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Product_Quantity)
                            </td>
                            
                            <td><img src="@Url.Content(item.Product_Feature_Image)" height="8%" alt="Alternate Text" /></td>
                            
                            <td>
                                @Html.DisplayFor(modelItem => item.Category.Category_Name)
                            </td>
                            <td>
                                <a class="btn btn-sm btn-primary" href="@Url.Action("Edit", "Product", new { id = item.ID })" aria-label="Edit">
                                    <i class="fa fa-edit" aria-hidden="true"></i>
                                </a>
                                <a class="btn btn-sm btn-info " href="@Url.Action("Details", "Product", new { id = item.ID })" aria-label="Details">
                                    <i class="fa fa-info" aria-hidden="true"></i>
                                </a>
                                <a class="btn btn-sm btn-danger " href="@Url.Action("Delete", "Product", new { id = item.ID })" aria-label="Delete">
                                    <i class="fa fa-trash" aria-hidden="true"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer small text-muted">Updated yesterday at @System.DateTime.Now</div>
</div>